package p10_19;

public class Problem14 {

	public static void main(String args[])
	{
		int maxLength = 0;
		int length = 0;
		long num = 0;
		long maxNum = 0;
		for(int i = 1; i < 1000000; i++)
		{
			length = 1;
			num = i;
			while(num != 1)
			{
				if(num % 2 == 0)
				{
					num /= 2;
				}
				else
				{
					num = num * 3 + 1;
				}
				length++;
			}
			if(length > maxLength)
			{
				maxLength = length;
				maxNum = i;
			}
		}
		System.out.println(maxNum);
		System.out.println(maxLength);
	}
	
}
